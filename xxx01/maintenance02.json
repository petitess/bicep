{
    "$schema": "http://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "maintenanceConfigName": {
            "type": "string",
            "metadata": {
                "description": "This is name of the maintenance config being created."
            }
        },
        "maintenanceConfigLocation": {
            "type": "string",
            "metadata": {
                "description": "This is location of the maintenance config being created."
            }
        },
        "maintenanceSchedule": {
            "type": "object",
            "metadata": {
                "description": "This is schedule information associated with the Maintenance configuration."
            }
        },
        "maintenanceScope": {
            "type": "string",
            "metadata": {
                "description": "Gets or sets maintenanceScope of the configuration."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2021-09-01-preview",
            "type": "Microsoft.Maintenance/maintenanceConfigurations",
            "name": "[parameters('maintenanceConfigName')]",
            "location": "[parameters('maintenanceConfigLocation')]",
            "tags": {},
            "properties": {
                "maintenanceScope": "InGuestPatch",
                "installPatches": {
                    "linuxParameters": {
                        "classificationsToInclude": [
                            "Critical",
                            "Security"
                        ],
                        "packageNameMasksToExclude": [],
                        "packageNameMasksToInclude": null
                    },
                    "windowsParameters": {
                        "classificationsToInclude": [
                            "Critical",
                            "Security"
                        ],
                        "kbNumbersToExclude": [
                            "kb12345"
                        ],
                        "kbNumbersToInclude": null
                    },
                    "rebootSetting": "RebootIfRequired"
                },
                "extensionProperties": {
                    "InGuestPatchMode": "User"
                },
                "maintenanceWindow": {
                    "startDateTime": "2022-10-15 13:15",
                    "duration": "03:55",
                    "timeZone": "W. Europe Standard Time",
                    "expirationDateTime": null,
                    "recurEvery": "1Day"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-08-01",
            "name": "[uniqueString('b3care-nl-mgt')]",
            "resourceGroup": "b3care-nl-mgt",
            "subscriptionId": "9376fdb8-ba53-409c-b613-9118f13f6470",
            "dependsOn": [
                "[concat('Microsoft.Maintenance/maintenanceConfigurations/', parameters('maintenanceConfigName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "apiVersion": "2021-09-01-preview",
                            "type": "Microsoft.Maintenance/configurationAssignments",
                            "name": "upAssignment",
                            "location": "westeurope",
                            "scope": "Microsoft.Compute/virtualMachines/B3CARE-NL-MGT01",
                            "tags": {},
                            "properties": {
                                "maintenanceConfigurationId": "/subscriptions/0dcc13b7-1a10-483e-95aa-fe7e71802e2e/resourceGroups/rg-infra-dev-01/providers/Microsoft.Maintenance/maintenanceConfigurations/up"
                            }
                        }
                    ]
                },
                "parameters": {}
            },
            "tags": {}
        }
    ]
}
